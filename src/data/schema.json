{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["sheets"],
  "properties": {
    "sheets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "columns", "rows"],
        "properties": {
          "name": {
            "type": "string"
          },
          "columns": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [{ "type": "number" }, { "type": "string" }]
              }
            }
          }
        }
      }
    }
  }
}
